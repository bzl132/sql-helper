{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:write-files",
    "fs:allow-write",
    "fs:allow-create",
    "fs:allow-read",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope-appdata-recursive",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    "dialog:default",
    "dialog:allow-save"
  ]
}